{{#> layouts/base title="샘플페이지" }}

    {{#*inline "body-block"}}
        <div class="row">
            <div class="page-header">
                <h1>{{article.title}}</h1>
            </div>
        </div>

        <div class="row">
            <span>
                글쓴이 : <strong>{{article.user.username}}</strong>
            </span>
            <span>
                작성시간 : <strong>{{temporalFormat article.created "yyyy MM-dd hh:mm:ss"}}</strong>
            </span>
            <hr>
        </div>

        <div class="row">
            {{{article.content}}}
        </div>
    {{/inline}}

    {{#*inline "script-block"}}
    {{/inline}}

{{/layouts/base}}